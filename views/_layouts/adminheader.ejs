<body>

    <nav class="navbar navbar-expand-lg bg-menu">
        <div class="container-fluid d-flex justify-content-lg-between">
            <a class="navbar-brand logo" href="/" target="_blank">Shopping Cart</a>
            <div class="input-group">
                <a href="" class="nav-link dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user"></i></a>

                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="/users/logout">logout</a></li>
                </ul>
            </div>

        </div>
    </nav>

    <main role="main" class="container-fluid">
        <div class="row">



            <br>

            <%- messages('messages', locals) %>

                <% if (errors) { %>
                    <% errors.forEach(function(error) { %>
                        <div class="alert alert-danger">
                            <%= error.msg %>
                        </div>
                        <% }); %>
                            <% } %>