<% include _layouts/header %>

    <div class="col-md-12">
        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="https://www.namu.com.vn/img/uploads/slider/slishow-1583381669-BANNER_NAMU_1348W%20X%20572H.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="https://zonbig.com/upload/images/banner-bai-viet-4.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="https://cdn3.dhht.vn/wp-content/uploads/2017/08/shop-quan-ao-cong-so-dan-chau.jpg" class="d-block w-100" alt="...">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
		  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
		  <span class="visually-hidden">Previous</span>
		</button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
		  <span class="carousel-control-next-icon" aria-hidden="true"></span>
		  <span class="visually-hidden">Next</span>
		</button>
        </div>
    </div>
    <div class="row products mt-4">

        <%if (products.length > 0) { %>
            <% products.forEach(function(p) { %>
                <div class="col-xs-12 col-md-3 col-sm-6 p item">
                    <a href="/products/<%= p.category %>/<%= p.slug %>" class="pa">
                		<img class="image" src="/product_images/<%= p.id %>/<%= p.image %>" alt="">
            		</a>
                    <div class="content-item mt-2">
                        <p class="fw-bold">
                            <%= p.title %>
                        </p>
                        <div class="rating">
                            <span class="text-warning"><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star-half-alt"></i></span>
                            <span class="text-secondary">4.9/5</span>
                        </div>
                        <h6 class="mt-2">$
                            <%= parseFloat(p.price).toFixed(2) %>
                        </h6>
                        <div class="view-product d-flex justify-content-between">
                            <a href="/products/<%= p.category %>/<%= p.slug %>" class="view"> <i class="fas fa-eye"></i></a>
                            <a href="/products/<%= p.category %>/<%= p.slug %>" class="view"><i class="fas fa-cart-plus"></i></a>
                            <a href="/products/<%= p.category %>/<%= p.slug %>" class="view"><i class="far fa-heart"></i></a>

                        </div>
                    </div>
                </div>
                <% }); %>
                    <% } else { %>
                        <h3 class="text-center">There are no products at all ...</h3>
                        <% } %>
    </div>


    <% include _layouts/footer %>